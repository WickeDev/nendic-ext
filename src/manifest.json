{
  "manifest_version": 2,
  "name": "네이버 영어사전 (Naver English Dictionary)",
  "version": "2.3.0",
  "description": "영어 단어의 뜻과 예문을 쉽게 찾을 수 있습니다.",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "css/content.css"
      ],
      "js": [
        "vendor/require.js",
        "js/require_content.js",
        "js/require_config.js",
        "js/cscript/cscript_main.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "vendor/require.js",
      "js/require_config.js",
      "js/bg/bg_main.js"
    ]
  },
  "permissions": [
    "<all_urls>", "tabs", "contextMenus", "cookies"
  ],
  "web_accessible_resources": [
    "vendor/*", "js/*", "font/*", "popup/*"
  ]
}
