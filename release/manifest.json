{
"manifest_version": 2,
"name": "네이버 영어사전 (Naver English Dictionary)",
"version": "2.0.0",
"description": "영어 단어의 뜻과 예문을 쉽게 찾을 수 있습니다.",
"icons": {
"16": "img/icon16.png",
"48": "img/icon48.png"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
"css": [
"css/content_style.css"
],
"js": [ "js/cscript.min.js"
],
"all_frames": true
}
],
"background": {
"scripts": [ "js/bg.min.js"
]
},
"browser_action": {
"default_icon": {
"19": "img/icon48.png",
"38": "img/icon48.png"
}
},
"permissions": [
"<all_urls>", "tabs", "contextMenus", "cookies"
],
"web_accessible_resources": [
"js/*"
]
}
